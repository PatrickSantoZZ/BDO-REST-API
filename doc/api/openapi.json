		"/v0/guildProfileSearch?region={region}&query={query}&page={page}": {
			"get": {
				"description": "Search for guild.",
				"summary": "Search for guild.",
				"operationId": "getGuildProfileSearch",
				"parameters": [
					{
						"name": "region",
						"in": "query",
						"description": "Desired guild's region.",
						"required": true,
						"schema": {
							"type": "string",
							"enum": ["EU", "NA"]
						}
					},
					{
						"name": "query",
						"in": "query",
						"description": "Desired guild's name.",
						"required": true,
						"schema": {
							"type": "string"
						}
					},
					{
						"name": "page",
						"in": "query",
						"description": "Desired page of results. Each page has up to 10 guilds.",
						"required": false,
						"schema": {
							"type": "string",
							"default": 1
						}
					}
				],
				"responses": {
					"200": {
						"description": "Successful operation.",
						"content": {
							"application/json": {
								"schema": {
									"title": "GuildProfileSearchResult",
									"type": "array",
									"items": {
										"type": "object",
										"properties": {
											"name": {
												"type": "string",
												"example": "TumblrGirls"
											},
											"region": {
												"type": "string",
												"enum": ["EU", "NA"]
											},
											"createdOn": {
												"type": "string",
												"example": "2020-02-23T00:00:00Z"
											},
											"guildMaster": {
												"type": "object",
												"properties": {
													"familyName": {
														"type": "string",
														"example": "Apple"
													},
													"profileTarget": {
														"type": "string",
														"example": "tbXSK...SY%3d"
													},
													"region": {
														"type": "string",
														"enum": ["EU", "NA"]
													}
												}
											},
											"kind": {
												"type": "string",
												"example": "Guild"
											},
											"population": {
												"type": "number",
												"example": 1
											}
										}
									}
								}
							}
						}
					},
					"504": {
						"$ref": "#/components/responses/504"
					}
				}
			}
		},
		"/v0/profileSearch?region={region}&query={query}&searchType={searchType}&page={page}": {
			"get": {
				"description": "Search for player.",
				"summary": "Search for player.",
				"operationId": "getProfileSearch",
				"parameters": [
					{
						"name": "region",
						"in": "query",
						"description": "Desired player's region.",
						"required": true,
						"schema": {
							"type": "string",
							"enum": ["EU", "NA"]
						}
					},
					{
						"name": "query",
						"in": "query",
						"description": "Desired player's family name or character name.",
						"required": true,
						"schema": {
							"type": "string"
						}
					},
					{
						"name": "searchType",
						"in": "query",
						"description": "Type of search.",
						"required": true,
						"schema": {
							"type": "string",
							"enum": ["familyName", "characterName"]
						}
					},
					{
						"name": "page",
						"in": "query",
						"description": "Desired page of results. Each page has up to 20 players.",
						"required": false,
						"schema": {
							"type": "string",
							"default": 1
						}
					}
				],
				"responses": {
					"200": {
						"description": "Successful operation.",
