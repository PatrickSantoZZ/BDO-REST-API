{
	"openapi": "3.0.2",
	"info": {
		"title": "BDO REST API",
		"version": "v0"
	},
	"servers": [
		{
			"url": "http://localhost:8001"
		},
		{
			"url": "https://boiling-mountain-53521.herokuapp.com"
		}
	],
	"components": {
		"responses": {
			"504": {
				"description": "BDO servers are currently under maintenance and request is not cached.",
				"content": {
					"application/json": {
						"schema": {
							"type": "object",
							"properties": {
								"error": {
									"type": "string",
									"example": "BDO servers are currently under maintenance. More info: www.naeu.playblackdesert.com"
								}
							}
						}
					}
				}
			}
		}
	},
	"paths": {
		"/v0/guildProfile?guildName={guildName}&region={region}": {
			"get": {
				"description": "Retrieve guild profile.",
				"summary": "Retrieve guild profile.",
				"operationId": "getGuildProfile",
				"parameters": [
					{
						"name": "guildName",
						"in": "query",
						"description": "Desired guild's name.",
						"required": true,
						"schema": {
							"type": "string"
						}
					},
					{
						"name": "region",
						"in": "query",
						"description": "Desired guild's region.",
						"required": true,
						"schema": {
							"type": "string",
							"enum": ["EU", "NA"]
						}
					}
				],
				"responses": {
					"200": {
						"description": "Successful operation.",
						"content": {
							"application/json": {
								"schema": {
									"title": "GuildProfile",
									"type": "object",
									"properties": {
										"name": {
											"type": "string",
											"example": "TumblrGirls"
										},
										"region": {
											"type": "string",
											"enum": ["EU", "NA"]
										},
										"createdOn": {
											"type": "string",
											"example": "2020-02-23T00:00:00Z"
										},
										"guildMaster": {
											"type": "object",
											"properties": {
												"familyName": {
													"type": "string",
													"example": "Apple"
												},
												"profileTarget": {
													"type": "string",
													"example": "tbXSK...SY%3d"
												},
												"region": {
													"type": "string",
													"enum": ["EU", "NA"]
												}
											}
										},
										"members": {
											"type": "array",
											"items": {
												"type": "object",
												"properties": {
													"familyName": {
														"type": "string",
														"example": "Apple"
													},
													"profileTarget": {
														"type": "string",
														"example": "tbXSK...SY%3d"
													},
													"region": {
														"type": "string",
														"enum": ["EU", "NA"]
													}
												}
											}
										},
										"population": {
											"type": "number",
											"example": 1
										},
										"occupying": {
											"type": "string",
											"example": "Mediah Territory"
										}
									}
								}
							}
						}
					},
					"504": {
						"$ref": "#/components/responses/504"
					}
				}
			}
		},
